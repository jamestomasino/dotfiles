# options
shopt -s cdspell
shopt -s checkwinsize
shopt -s histappend
shopt -s nocaseglob

# PROMPT COMMANDS
PROMPT_COMMAND="history -a; history -r; $PROMPT_COMMAND"

# umask liberal
umask 0022

# use vim on the command line
set -o vi
